<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pomodorek.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Pomodorek.Views"
    Shell.FlyoutWidth="{OnPlatform Android=250, WinUI=200 }"
    Shell.FlyoutBehavior="{OnPlatform Android=Flyout, WinUI=Locked }">
    <ShellContent
        Title="Pomodorek"
        FlyoutIcon="icon_clock.png"
        Route="TimerPage"
        ContentTemplate="{DataTemplate views:TimerPage}" />

    <ShellContent
        Title="Settings"
        FlyoutIcon="icon_gear.png"
        Route="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}" />
</Shell>